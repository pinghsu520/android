<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green"
    tools:context=".MainActivity"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView

        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:text="@string/all_description"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        />

    <TextView

        android:id="@+id/finalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        android:text="Your final score is: "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />

    <TextView

        android:id="@+id/finalTrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        android:text="Your trait is: "
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />

    <TextView

        android:id="@+id/cholericScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        android:text="Your choleric score is: "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />
    <TextView

        android:id="@+id/melancholicScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        android:text="Your melancholic score is: "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />

    <TextView

        android:id="@+id/phlegmaticScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        android:text="Your phlegmatic score is: "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />

    <TextView

        android:id="@+id/sanguineScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        android:text="Your sanguine score is: "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />

</LinearLayout>
